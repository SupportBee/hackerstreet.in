<%= render partial: 'story', locals: { story: @story } %>
<% if @story.text %>
 <%= markdown(@story.text) %>
<% end %>

<% unless @story.kill_action == "un-kill" %>
  <%= render partial: 'comments/form', locals: { parent: @story } %>
<% end %>

<ul>
  <% @story.comments.each do |comment| %>
    <%= render partial: 'comments/comment', locals: {comment: comment } %>
  <% end %>
</ul>
